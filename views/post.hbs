<style>
  .content { padding: 15;border-left: 1px solid lightgray; border-right: 1px
  solid lightgray; }
</style>

<div style="padding: 30">

  <h2>{{post.title}}</h2>

  <div class="content">
    <p>{{post.content}}</p>
  </div>

  <h3>Comments</h3>
  <ul>
    {{#each post.comments}}
      <li>{{this.content}}</li>
    {{/each}}
  </ul>
  <form id="comment-form" method="POST" action="/post/{{post.id}}/comment">
    <input
      type="text"
      id="comment"
      name="content"
      placeholder="Add a comment..."
    />
    <button type="submit">Submit</button>
  </form>
</div>