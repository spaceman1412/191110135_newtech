<style>
  .main-container { padding: 30; } .body { border: 2px solid lightgray; }
  .header-card { background-color: #E7E9EB; justify-content: center;
  align-items: center; padding: 10; text-align: center; } .button1 {
  background-color: transparent; color: #097FFF; border: 2px solid #097FFF;
  width: 100; height: 50; border-radius: 10px; } .header-text { font-size: 40px;
  } .post-title {font-size: 30px; color: blue} .blog-text { display:
  inline-block; width: 1000px; white-space: nowrap; overflow: hidden !important;
  text-overflow: ellipsis; }
</style>

<div class="main-container">
  <div class="body">
    <div class="header-card">
      <p class="header-text"> My Blog</p>
      <form method="get" action="/new-post">
        <button class="button1" type="submit">Create Post</button>
      </form>
    </div>

    <ul>
      {{#each posts}}
        <div style="padding: 15">
          <a class="post-title" href="/post/{{this.id}}">{{this.title}}</a>
          <div
            style="padding-top: 20; padding-bottom: 10; display:flex; flex-direction:row"
          >
            <form method="get" action="/post/{{this.id}}/update">
              <button
                style="padding: 5; background-color: #008CBA; color:white; border:none; width: 75; height: 40 "
                class="button1"
                type="submit"
                data-id="{{this.id}}"
              >Edit</button>
            </form>

            <form method="POST" action="/post/{{this.id}}/delete">
              <button
                style="padding: 5; background-color: #f44336; color:white; border:none; width: 75; height: 40; margin-left: 5px"
                class="button1"
                type="submit"
                data-id="{{this.id}}"
              >Delete</button>
            </form>
          </div>

          <span class="blog-text">{{this.content}}</span>
        </div>
      {{/each}}
    </ul>
  </div>
</div>